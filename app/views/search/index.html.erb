<div class="container">
  <%= form_tag search_index_path,method: :get do %>
  <div class="row justify-content-md-center">
    <%= label_tag :sort, "Sort By :" %>
    <div class="col-2" >
            <%= select_tag :price,options_for_select([['price',''],['High To Low','DESC'],['Low To High','ASC'],['New Arrive',' ']],params[:price]),class: "form-control form-control-lg " %>
            <%= hidden_field_tag(:name, params[:name] ,class: "form-control search")%>
            <%= hidden_field_tag(:suitable, params[:suitable] ,class: "form-control search")%>
    </div>
    <table>
      <tr>
        <td>
          <%= check_box_tag(:brand,'1',params[:price]) %>
          <%= label_tag :brand, 'adidas' %></td>
        <td>
           <%= check_box_tag(:brand,'2',params[:price]) %>
           <%= label_tag :brand, 'bata' %></td>
        <td>
          <%= check_box_tag(:brand,'3',params[:price]) %>
          <%= label_tag :brand, 'nike' %>
        </td>
      </tr>

      <tr>
        <td>
          <%= check_box_tag(:brand,'4',params[:price]) %>
          <%= label_tag :brand,'puma' %>
        </td>
        <td>
          <%= check_box_tag(:brand,'5',params[:price]) %>
          <%= label_tag :brand,'woodland' %>
        </td>
        <td>
          <%= check_box_tag(:brand,'7',params[:price]) %>
          <%= label_tag :brand,'reebok' %>
        </td>
      </tr>
    </table>
        <div class="col-2 btn-group" >
            <%= submit_tag  "search",class:"btn-sm btn-light" %>
          </div>

    </div>
    <% end %>
</div>



  <div class="colorlib-product">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
          <h2>View All Products</h2>
        </div>
      </div>

      <div class="row row-pb-md">
        <% if @shoes.present? %>
            <% @shoes.each do |shoe| %>
              <div class="col-md-3 col-lg-3 mb-4 text-center">
                <div class="product-entry bprice">
                  <a href="<%= search_path(id: shoe.id)=%>",class="prod-img">
                    <%= image_tag shoe.image,class: 'img-fluid'%>
                  </a>
                  <div class="desc">
                    <h2><a href="#"><%= shoe.name%></a></h2>
                    <h2><a href="#"><%= shoe.brand.name%></a></h2>
                    <span class="price"><%= shoe.price %></span>
                    <span><%=  shoe.suitable %></span>
                  </div>
                </div>
              </div>
            <% end %>
        <% else %>
          <div class="col-sm-8 offset-sm-2 text-center ">
            <h2>Shoes Not Exist!!</h2>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-md-12 text-center">
            <%= paginate @shoes %>
        </div>
      </div>
    </div>
  </div>

  <div class="colorlib-partner">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
          <h2>Trusted Partners</h2>
        </div>
      </div>
      <div class="row">
        <div class="col partner-col text-center">
        <%= image_tag "brand-1.jpg",:class => 'img-fluid' %>
        </div>
        <div class="col partner-col text-center">
          <%= image_tag "brand-2.jpg",:class => 'img-fluid' %>
        </div>
        <div class="col partner-col text-center">
          <%= image_tag "brand-3.jpg",:class => 'img-fluid' %>
        </div>
        <div class="col partner-col text-center">
          <%= image_tag "brand-4.jpg",:class => 'img-fluid' %>
        </div>
        <div class="col partner-col text-center">
          <%= image_tag "brand-5.jpg",:class => 'img-fluid' %>
        </div>
      </div>
    </div>
  </div>
<div class="">

</div>

